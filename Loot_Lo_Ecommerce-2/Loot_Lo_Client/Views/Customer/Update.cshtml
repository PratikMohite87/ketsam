@model Loot_Lo_Client.Models.Customer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@section Scripts
        {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row mt-3">
    <div class="col-5">
        <h3>Update Details</h3>
    </div>
</div>

<div class="row mt-3">
    <div class="col-5">
        <form asp-action="Update">

            <div class="form-group">
                <input class="form-control" asp-for="CustomerId" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerPhoneNo" class="control-label"></label>
                <input asp-for="CustomerPhoneNo" class="form-control" />
                <span asp-validation-for="CustomerPhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerAddress" class="control-label"></label>
                <input asp-for="CustomerAddress" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="CustomerPassword" class="control-label"></label>
                <input asp-for="CustomerPassword" class="form-control" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Update Details" class="btn btn-primary" />
            </div>

            <div><h6 class="text-success">@ViewBag.Message</h6></div>
        </form>
    </div>

    <div class="col-7" style="height: 100%;">
        <div class="d-flex justify-content-center align-items-center">
            <a asp-action="DeactivationPage" class="btn btn-lg btn-danger">Deactivate Account?</a>
        </div>
    </div>
</div>