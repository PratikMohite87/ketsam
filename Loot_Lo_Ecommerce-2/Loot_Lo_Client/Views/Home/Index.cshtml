@using Loot_Lo_Client.Helper

@{

    if (SessionHelper.GetObjectFromJson<Customer>(Context.Session, "customer") != null)
    {
        ViewData["Title"] = SessionHelper.GetObjectFromJson<Customer>(Context.Session, "customer").CustomerName;
    }
    else
        ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>@ViewData["Title"]</h2>
</div>
<div class="container">
    <br>
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>

        </ol>



        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">



                <img style=" width:100%"
                     src="https://cdn.mos.cms.futurecdn.net/6t8Zh249QiFmVnkQdCCtHK-1200-80.jpg" alt="Slide-1">
            </div>



            <div class="item">
                <img style=" width:100%" src="https://www.support4business.com/wp-content/uploads/2017/08/promotional-products.jpg" alt="Slide-2">
            </div>



            <div class="item">
                <img style=" width:100%" src="https://www.techicy.com/wp-content/uploads/2018/06/Electronics-products-on-Amazon.png" alt="Slide-3">
            </div>




        </div>



        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
