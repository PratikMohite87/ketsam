@model Loot_Lo_Client.Models.Customer

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="card">
    <div class="card-header">
        <h1>@ViewBag.Message</h1>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.CustomerName</h5>
        <p class="card-text">@Model.CustomerEmail</p>
        <p class="card-text">@Model.CustomerPhoneNo</p>
        @if (Model.CustomerAddress != null)
        {
            <p class="card-text"><b>Address: </b>@Model.CustomerAddress</p>
        }
        <p class="card-text">Total Amount: <b>@ViewBag.TotalAmount</b></p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go Shopping</a>
    </div>
</div>

<style>
    .card-header {
        background-color: rgb(204, 251, 202)
    }
</style>
