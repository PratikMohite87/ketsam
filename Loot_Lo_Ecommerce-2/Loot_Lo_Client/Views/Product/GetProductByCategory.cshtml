<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col d-flex flex-row flex-wrap justify-content-start">
        @foreach (var item in Model)
        {
            <div class="card m-2" style="width: 18rem;">
                <img class="card-img-top" src="~/Images/@item.ImagePath" alt="Card image cap" width="286" height="180">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <hr align="center" width="50%" />
                    <h6><b>&#8377; @item.Price </b></h6>
                    <hr align="center" width="50%" />
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    @if (SessionHelper.GetObjectFromJson<Customer>(Context.Session, "customer") != null)
                    {
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId" class="btn btn-primary">Add To Cart</a>
                    }
                </div>
            </div>
        }
    </div>
</div>