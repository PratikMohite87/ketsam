@model IEnumerable<Loot_Lo_Client.Models.Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table class="table table-striped">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Product Quantity</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId" class="btn btn-success">Add to Cart</a></td>
        </tr>
    }
</table>