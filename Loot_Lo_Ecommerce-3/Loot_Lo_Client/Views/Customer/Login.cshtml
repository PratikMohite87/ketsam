@model Loot_Lo_Client.Models.ViewModels.CustomerLogin
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@section Scripts
        {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4 d-flex justify-content-center align-items-center">
        <h3>Login</h3>
    </div>
    <div class="col-4"></div>
</div>
<div class="row mt-5 ">
    <div class="col-4"></div>
    <div class="col-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="CustomerEmail"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPassword"></label>
                <input asp-for="CustomerPassword" class="form-control" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" name="setCookie" value="true" />Remember me?
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div>@ViewBag.Message</div>
        </form>
    </div>
    <div class="col-4"></div>
</div>

<div class="row">
    <div class="col-4"></div>
    <div class="col-2">
        <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
    <div class="col-2">
        <a asp-action="Register">Create Account</a>
    </div>
    <div class="col-4"></div>
</div>

