@section Scripts
        {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row mt-3">
    <div class="col-5">
        <h3>Registration Form</h3>
    </div>
</div>

<div class="row mt-5">
    <div class="col-5">
        <form asp-action="Register">

            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerPhoneNo" class="control-label"></label>
                <input asp-for="CustomerPhoneNo" class="form-control" />
                <span asp-validation-for="CustomerPhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerPassword" class="control-label"></label>
                <input asp-for="CustomerPassword" class="form-control" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>

            <div><h6>@ViewBag.Message</h6></div>
        </form>
    </div>
</div>